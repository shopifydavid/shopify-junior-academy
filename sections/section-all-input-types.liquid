<div class="section-all-types__homework">
  <h2>HOMEWORK</h2>
  <div class="section-all-types__block">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'home_1' and block.settings.menu != blank%}
          <div class="section-all-types__home-1 section-all-types-{{ block.id }}" style="background-color: {{ block.settings.background_color | default: '#FBCEB1'  }}">
            {% assign input_linklist = block.settings.menu %}
            {% if input_linklist.links.size > 0 %}
              <ul>
                {% for link in input_linklist.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                    {% if link.links.size > 0 %}
                      <ul>
                        {% for child_link in link.links %}
                          <li>
                            <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                            {% if child_link.links.size > 0 %}
                              <ul>
                                {% for child_child_link in child_link.links %}
                                  <li>
                                    <a href="{{ child_child_link.url }}">{{ child_child_link.title }}</a>
                                  </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          <style>
            .section-all-types-{{ block.id }} * {
              color: {{ block.settings.text_color | default: '#000' }};
            }
          </style>
          </div> 

        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
  {% if section.blocks.size > 0 %}
  <style>
    {% for block in section.blocks %}
        {% if block.type == 'home_1' and block.settings.menu != blank %}
          .section-all-types-{{ block.id }} > ul > li > a{
            color: {{ block.settings.text_color_parent | default: '#000' }};
          }
        {% endif %}
    {% endfor %}
  </style>
  {% endif %}
</div>
