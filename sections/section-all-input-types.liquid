<div class="page-width section-all-input-types__block">
  <h2>LINKS Fields</h2>
  <a href="{{ section.settings.input_link }}">{{ section.settings.input_link }}</a>
  {% assign input_linklist = section.settings.input_menu %}
  {% if input_linklist.links.size > 0 %}
    <ul>
      {% for link in input_linklist.links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
            <ul>
              {% for child_link in link.links %}
                <li>
                  <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                  {% if child_link.links.size > 0 %}
                    <ul>
                      {% for child_child_link in child_link.links %}
                        <li>
                          <a href="{{ child_child_link.url }}">{{ child_child_link.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
